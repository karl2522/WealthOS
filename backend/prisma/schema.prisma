// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  
  isEmailVerified Boolean @default(false)
  refreshToken    String?
  
  portfolios Portfolio[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@map("users")
}

model Portfolio {
  id           String   @id @default(uuid())
  name         String
  currency     String   @default("USD")
  riskProfile  String?
  isPrimary    Boolean  @default(true)
  
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  assets       PortfolioAsset[]
  goals        Goal[]
  snapshots    PortfolioSnapshot[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([userId])
  @@map("portfolios")
}

model PortfolioSnapshot {
  id            String   @id @default(uuid())
  portfolioId   String
  portfolio     Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  
  date          DateTime // Normalized to 00:00:00
  
  totalValue    Decimal  @db.Decimal(18, 2)
  totalInvested Decimal  @db.Decimal(18, 2)
  totalPL       Decimal  @db.Decimal(18, 2)
  returnPct     Decimal  @db.Decimal(10, 4) // e.g. 15.55%
  currency      String   @default("USD")
  
  createdAt     DateTime @default(now())
  
  @@unique([portfolioId, date])
  @@index([portfolioId])
  @@map("portfolio_snapshots")
}

model PortfolioAsset {
  id          String   @id @default(uuid())
  portfolioId String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  
  symbol      String
  type        String
  quantity    Decimal  @db.Decimal(18, 8)
  avgPrice    Decimal? @db.Decimal(18, 4)
  
  currentPrice     Decimal?  @db.Decimal(18, 4)
  lastPriceUpdate  DateTime?
  
  createdVia  String?  @default("dashboard")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([portfolioId, symbol, type])
  @@index([portfolioId])
  @@index([symbol])
  @@map("portfolio_assets")
}

model Goal {
  id                  String   @id @default(uuid())
  portfolioId         String
  portfolio           Portfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
  
  name                String
  targetAmount        Decimal  @db.Decimal(18, 2)
  monthlyContribution Decimal? @db.Decimal(18, 2)
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  @@index([portfolioId])
  @@map("goals")
}
